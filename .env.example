# Milou Application Environment Configuration Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# ========================================

# Server Configuration
# ----------------------------------------
SERVER_NAME=localhost
CUSTOMER_DOMAIN_NAME=localhost
SSL_PORT=443
SSL_CERT_PATH=./ssl
CORS_ORIGIN=https://localhost

# Database Configuration (auto-generated during setup)
# ----------------------------------------
DB_HOST=db
DB_PORT=5432
DB_USER=your_db_user_here
DB_PASSWORD=your_secure_db_password_here
DB_NAME=milou
DATABASE_URI=postgresql+psycopg2://your_db_user_here:your_secure_db_password_here@db:5432/milou
POSTGRES_USER=your_db_user_here
POSTGRES_PASSWORD=your_secure_db_password_here
POSTGRES_DB=milou

# Redis Configuration (auto-generated during setup)
# ----------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_SESSION_TTL=3600
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=10000
REDIS_CLEANUP_ENABLED=true
REDIS_CLEANUP_INTERVAL=3600

# RabbitMQ Configuration
# ----------------------------------------
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Security Configuration (auto-generated during setup)
# ----------------------------------------
SESSION_SECRET=your_secure_session_secret_here
ENCRYPTION_KEY=your_secure_encryption_key_here

# Application Configuration
# ----------------------------------------
API_PORT=9999
NODE_ENV=production

# IMPORTANT SECURITY NOTES:
# ========================================
# 1. GitHub token should NEVER be stored in this file
# 2. Pass GitHub token via command line: --token YOUR_TOKEN
# 3. All passwords and secrets will be auto-generated during setup
# 4. Always use 'chmod 600 .env' to secure this file
# 5. Never commit .env to version control

# Example usage:
# ./milou.sh setup --token "ghp_your_github_token" --domain "your-domain.com" 